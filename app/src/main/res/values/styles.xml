<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="AppTheme.Base">
        <!-- Customize your theme here. -->
    </style>

    <style name="OverflowMenuStyle" parent="@style/ThemeOverlay.AppCompat.Light">
        <!-- 是否覆盖overflow按钮，默认为true，即盖住Toolbar -->
        <item name="overlapAnchor">false</item>
    </style>

    <style name="DropDownMenuAnimationStyle">
        <item name="android:windowEnterAnimation">@anim/slide_in_from_top</item>
        <item name="android:windowExitAnimation">@anim/slide_out_to_top</item>
    </style>

    <style name="ToolBarStyle">
        <item name="android:textColorPrimary">#fff</item>
        <item name="colorControlHighlight">#fff</item>
        <item name="android:background">?attr/colorPrimary</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/toolbar_height</item>
        <item name="android:minHeight">@dimen/toolbar_height</item>
    </style>

    <dimen name="toolbar_height">48dp</dimen>


    <style name="AppTheme.Base" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <!--<item name="colorButtonNormal">?attr/colorButtonNormal</item>-->
        <item name="rippleColor">#c1dfdfdf</item>
        <item name="colorControlHighlight">#1000</item>
        <item name="windowActionBar">false</item>
        <item name="android:windowNoTitle">true</item>
        <item name="windowActionBarOverlay">true</item>
        <!--<item name="android:listDivider">@drawable/list_item_divider</item>-->
        <!--<item name="android:dividerHeight">0.67dp</item>-->
        <!--<item name="android:cacheColorHint">@color/translate</item>-->
        <!--<item name="android:textCursorDrawable" tools:ignore="NewApi">@drawable/edit_text_cursor-->
        <!--</item>-->
        <!--<item name="android:listSelector">@drawable/comm_list_selector_light</item>-->
        <item name="actionButtonStyle">@style/ActionBarButtonStyle</item>
        <item name="toolbarNavigationButtonStyle">@style/ActionBarNavigationButtonStyle</item>
        <item name="actionMenuTextAppearance">@style/AppTheme.ActionBar.TitleText</item>
        <item name="actionMenuTextColor">#FFF</item>
        <item name="actionOverflowButtonStyle">@style/ActionButton.Overflow</item>
    </style>

    <style name="ActionButton.Overflow" parent="android:style/Widget.Holo.Light.ActionButton.Overflow">
        <item name="android:src">@mipmap/ic_launcher</item>
    </style>


    <style name="ActionBarNavigationButtonStyle" parent="Widget.AppCompat.Toolbar.Button.Navigation">
        <item name="android:background">@drawable/button_selector_shadow</item>
        <item name="android:paddingLeft">0dp</item>
        <item name="android:minWidth">48dp</item>
    </style>

    <style name="ActionBarButtonStyle" parent="Base.Widget.AppCompat.ActionButton">
        <item name="android:background">@drawable/button_selector_shadow</item>
    </style>

    <style name="AppTheme.ActionBar.TitleText" parent="TextAppearance.AppCompat.Widget.ActionBar.Title">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">#FFF</item>
    </style>
</resources>
